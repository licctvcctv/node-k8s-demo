# Deployment Configuration Template
# Copy this file to deployment.env and modify according to your environment

# Virtual Machine IPs
MASTER_IP=192.168.1.100
WORKER1_IP=192.168.1.101
WORKER2_IP=192.168.1.102

# K3s Configuration
K3S_TOKEN=my-secure-token-change-me

# Service Ports (NodePort)
USER_SERVICE_PORT=30081
PRODUCT_SERVICE_PORT=30082
ORDER_SERVICE_PORT=30083

# Monitoring Ports
PROMETHEUS_PORT=30090
GRAFANA_PORT=30030

# Jenkins Configuration
JENKINS_PORT=8080
JENKINS_ADMIN_PASSWORD=admin

# Redis Configuration
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Docker Registry (if using private registry)
DOCKER_REGISTRY=
DOCKER_USERNAME=
DOCKER_PASSWORD=

# Resource Limits
SERVICE_CPU_REQUEST=100m
SERVICE_CPU_LIMIT=200m
SERVICE_MEMORY_REQUEST=128Mi
SERVICE_MEMORY_LIMIT=256Mi

# Logging Level
LOG_LEVEL=info
NODE_ENV=production