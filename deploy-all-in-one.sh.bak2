        exit 1
    fi
    
    # æ£€æŸ¥ç«¯å£å ç”¨
    check_port 8080 "Jenkins"
    check_port 30081 "ç”¨æˆ·æœåŠ¡"
    check_port 30082 "å•†å“æœåŠ¡"
    check_port 30083 "è®¢å•æœåŠ¡"
