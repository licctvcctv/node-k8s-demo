# é€šç”¨æœåŠ¡éƒ¨ç½²å‡½æ•° - ä¿®å¤ç‰ˆ
deploy_service() {
    local service_name=$1
    local container_port=$2
    local node_port=$3
    local redis_url=$4
    local extra_env=$5
    
    # æ£€æŸ¥æœåŠ¡ä»£ç æ˜¯å¦å­˜åœ¨
    local has_real_code="false"
    if [ -f "$PROJECT_DIR/services/$service_name/index.js" ]; then
        has_real_code="true"
        show_info "å‘ç° $service_name çš„å®é™…ä»£ç "
        # è·å–æ–‡ä»¶åˆ—è¡¨
        ls "$PROJECT_DIR/services/$service_name/" | head -20 | xargs echo "æ–‡ä»¶:" || true
    else
        show_warning "$service_name æ²¡æœ‰æ‰¾åˆ°å®é™…ä»£ç ï¼Œå°†ä½¿ç”¨åŸºç¡€æ¨¡æ¿"
    fi
    
    # åˆ›å»ºConfigMapå­˜å‚¨åŸºç¡€ä»£ç 
    cat <<EOF | kubectl apply -f -
apiVersion: v1
kind: ConfigMap
metadata:
  name: $service_name-base
  namespace: $NAMESPACE
data:
  package.json: |
    {
      "name": "$service_name",
      "version": "1.0.0",
      "scripts": {
        "start": "node index.js"
      },
      "dependencies": {
        "express": "^4.18.2",
        "redis": "^4.6.5",
        "cors": "^2.8.5",
        "axios": "^1.4.0",
        "jsonwebtoken": "^9.0.0",
        "bcryptjs": "^2.4.3"
      }
    }
  index.js: |
    const express = require('express');
    const app = express();
    const PORT = process.env.PORT || $container_port;
    
    // å¥åº·æ£€æŸ¥
    app.get('/health', (req, res) => {
      res.json({ status: 'ok', service: '$service_name' });
    });
    
    // ä¸»é¡µ
    app.get('/', (req, res) => {
      res.send('<h1>${service_name} is running!</h1><p>Port: ' + PORT + '</p>');
    });
    
    // APIç«¯ç‚¹
    app.get('/api/status', (req, res) => {
      res.json({ 
        service: '$service_name',
        status: 'running',
        port: PORT,
        timestamp: new Date().toISOString()
      });
    });
    
    // é™æ€æ–‡ä»¶ï¼ˆå¦‚æœå­˜åœ¨ï¼‰
    const fs = require('fs');
    if (fs.existsSync('/app/public')) {
      app.use(express.static('/app/public'));
    }
    
    // é”™è¯¯å¤„ç†
    app.use((err, req, res, next) => {
      console.error(err);
      res.status(500).json({ error: 'Internal server error' });
    });
    
    // å¯åŠ¨æœåŠ¡å™¨
    const server = app.listen(PORT, () => {
      console.log('$service_name running on port ' + PORT);
    });
    
    // ä¼˜é›…å…³é—­
    process.on('SIGTERM', () => {
      console.log('SIGTERM received, shutting down gracefully');
      server.close(() => {
        console.log('Server closed');
        process.exit(0);
      });
    });
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: $service_name
  namespace: $NAMESPACE
spec:
  replicas: 1
  selector:
    matchLabels:
      app: $service_name
  template:
    metadata:
      labels:
