# æ£€æŸ¥å‰ç½®æ¡ä»¶
check_prerequisites() {
    show_section "1ï¸âƒ£  ç¯å¢ƒæ£€æŸ¥"
    
    # æ£€æŸ¥Docker
    if command -v docker &> /dev/null; then
        if docker info &> /dev/null; then
