    show_progress "ç¯å¢ƒæ£€æŸ¥å®Œæˆ"
}

# æ£€æŸ¥ç«¯å£å ç”¨
check_port() {
    local port=$1
    local service=$2
    if netstat -tlnp 2>/dev/null | grep ":$port " > /dev/null; then
        show_warning "ç«¯å£ $port ($service) å·²è¢«å ç”¨ï¼Œéƒ¨ç½²å¯èƒ½å†²çª"
    fi
}

# åŒæ­¥ä»£ç åˆ°WorkerèŠ‚ç‚¹ï¼ˆæ–°å¢å…³é”®å‡½æ•°ï¼‰
sync_code_to_workers() {
    show_section "ğŸ”„ åŒæ­¥ä»£ç åˆ°WorkerèŠ‚ç‚¹"
    
    # è·å–WorkerèŠ‚ç‚¹åˆ—è¡¨
    WORKERS=$(kubectl get nodes --no-headers | grep -v master | awk '{print $1}')
    
    if [ -z "$WORKERS" ]; then
        show_warning "æ²¡æœ‰å‘ç°WorkerèŠ‚ç‚¹ï¼Œå°†ç»§ç»­éƒ¨ç½²ï¼ˆå•èŠ‚ç‚¹æ¨¡å¼ï¼‰"
        return
    fi
    
    show_info "å‘ç°WorkerèŠ‚ç‚¹: $(echo $WORKERS | tr '\n' ' ')"
    
    # åŒæ­¥åˆ°æ¯ä¸ªWorkerèŠ‚ç‚¹
    for worker in $WORKERS; do
        show_info "åŒæ­¥ä»£ç åˆ° $worker..."
        
        # æ£€æŸ¥SSHè¿æ¥
        if ! ssh -o ConnectTimeout=5 -o BatchMode=yes root@$worker "echo 'SSH OK'" &>/dev/null; then
            show_warning "æ— æ³•SSHè¿æ¥åˆ° $workerï¼Œå°è¯•æ‰‹åŠ¨åŒæ­¥"
            echo "è¯·æ‰‹åŠ¨æ‰§è¡Œï¼š"
            echo "  scp -r $PROJECT_DIR root@$worker:$PROJECT_DIR"
            continue
        fi
        
        # åˆ›å»ºç›®æ ‡ç›®å½•
        ssh root@$worker "mkdir -p $PROJECT_DIR" 2>/dev/null
        
        # åŒæ­¥é¡¹ç›®æ–‡ä»¶
        if rsync -avz --delete "$PROJECT_DIR/" "root@$worker:$PROJECT_DIR/" &>/dev/null; then
            show_progress "$worker åŒæ­¥æˆåŠŸ"
        else
            # å¦‚æœrsyncä¸å¯ç”¨ï¼Œä½¿ç”¨scp
            if scp -r "$PROJECT_DIR"/* "root@$worker:$PROJECT_DIR/" &>/dev/null; then
                show_progress "$worker åŒæ­¥æˆåŠŸ (ä½¿ç”¨scp)"
            else
                show_error "$worker åŒæ­¥å¤±è´¥"
            fi
        fi
    done
    
    show_progress "ä»£ç åŒæ­¥å®Œæˆ"
}

# éƒ¨ç½²KubernetesæœåŠ¡
deploy_kubernetes_services() {
    show_section "2ï¸âƒ£  éƒ¨ç½²KubernetesæœåŠ¡"
    
    show_info "æ­£åœ¨æ¸…ç†æ—§èµ„æº..."
    # åˆ é™¤æ—§å‘½åç©ºé—´ï¼ˆå¦‚æœå­˜åœ¨ï¼‰
